#include <stdio.h>

int main() {
    int a[100], n, i, search, found = 0,count = 0;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    printf("Enter the element to search: ");
    scanf("%d", &search);
  
    for(i = 0; i < n; i++) {
        if(a[i] == search) {
            found = 1;
            count++;
            printf("%d ", i+1);
        }
    }
        if(found){
        printf("positions");
        printf("\nTotal element are: %d",count);
        }
        else{
        printf("\nElement is not found");
        }
    return 0;
}
